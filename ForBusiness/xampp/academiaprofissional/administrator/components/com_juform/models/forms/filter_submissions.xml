<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_JUFORM_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
                />
    </fields>

    <fields name="list">
        <field
                name="form_id"
                type="forms"
                class="inputbox"
                label="COM_JUFORM_FORM"
                description="COM_JUFORM_FORM_DESC"
                onchange="this.form.submit();"
                >
            <option value="">COM_JUFORM_SELECT_FORM</option>
        </field>

        <field
                name="custom_list_view"
                type="customlistview"
                label="COM_JUFORM_CUSTOM_LIST_VIEW"
                description="COM_JUFORM_CUSTOM_LIST_VIEW_DESC"
                >
            <option value="">COM_JUFORM_SELECT_FORM</option>
        </field>

        <field
                name="fullordering"
                type="filterfields"
                label="COM_JUFORM_LIST_FULL_ORDERING"
                description="COM_JUFORM_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="sub.created ASC"
                >
            <option value="">COM_JUFORM_SORT_BY</option>
            <option value="sub.id ASC">COM_JUFORM_SORT_BY_ID_ASC</option>
            <option value="sub.id DESC">COM_JUFORM_SORT_BY_ID_DESC</option>
            <option value="sub.user_id ASC">COM_JUFORM_SORT_BY_CREATED_BY_ASC</option>
            <option value="sub.user_id DESC">COM_JUFORM_SORT_BY_CREATED_BY_DESC</option>
            <option value="sub.created ASC">COM_JUFORM_SORT_BY_CREATED_ASC</option>
            <option value="sub.created DESC">COM_JUFORM_SORT_BY_CREATED_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                class="inputbox input-mini"
                default="25"
                label="COM_JUFORM_LIST_LIMIT"
                description="COM_JUFORM_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>