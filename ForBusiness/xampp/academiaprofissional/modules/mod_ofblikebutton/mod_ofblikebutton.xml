		<param name="overb" type="list" default="true" label="Verb to Display" description="The verb to display in the button, only Like and Recommend are supported">
            <option value="like">Like</option>
            <option value="recommend">Recommend</option>
        </param>  
		<param name="ofont" type="list" default="tahoma" label="Font" description="The font of the like button">
            <option value="arial">Arial</option>
			<option value="lucida grande">Lucida Grande</option>
