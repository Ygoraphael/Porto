<extension method="upgrade" type="component" version="2.5.0">
  <name>JotCache</name>
  <author>Vladimir Kanich</author>
  <creationDate>October 2014</creationDate>
  <copyright>(C)2010-2014 Vladimir Kanich. All rights reserved.</copyright>
  <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
  <authorEmail>contact_on_web_site@jotcomponents.net</authorEmail>
  <authorUrl>http://www.jotcomponents.net</authorUrl>
  <version>4.2.3</version>
  <description>JotCache component allows management of advanced page cache for Joomla 2.5 system. It needs for proper operation installed and enabled JotCache plugin. Details you can find in component Help.
  </description>
  <installfile>install.php</installfile>
  <uninstallfile>uninstall.php</uninstallfile>
  <install>
    <sql>
      <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
      <file driver="sqlsrv" charset="utf8">sql/install.sqlsrv.utf8.sql</file>
    </sql>
  </install>
  <uninstall>
    <sql>
      <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
      <file driver="sqlsrv" charset="utf8">sql/uninstall.sqlsrv.utf8.sql</file>
    </sql>
  </uninstall> 
  <administration>
    <menu img="components/com_jotcache/assets/images/jotcache-logo.png" link="option=com_jotcache">COM_JOTCACHE_TITLE</menu>
    <languages folder="admin/language">
      <language tag="en-GB">en-GB/en-GB.com_jotcache.ini</language>
      <language tag="en-GB">en-GB/en-GB.com_jotcache.sys.ini</language>
      <language tag="en-GB">en-GB/en-GB.plg_system_jotcache.ini</language>
      <language tag="en-GB">en-GB/en-GB.plg_system_jotcache.sys.ini</language>
      <language tag="en-GB">en-GB/en-GB.plg_system_jotmarker.ini</language>
      <language tag="en-GB">en-GB/en-GB.plg_system_jotmarker.sys.ini</language>
      <language tag="en-GB">en-GB/en-GB.plg_jotcacheplugins_crawler.ini</language>
      <language tag="en-GB">en-GB/en-GB.plg_jotcacheplugins_crawler.sys.ini</language>
      <language tag="en-GB">en-GB/en-GB.plg_jotcacheplugins_crawlerext.ini</language>
      <language tag="en-GB">en-GB/en-GB.plg_jotcacheplugins_crawlerext.sys.ini</language>
      <language tag="en-GB">en-GB/en-GB.plg_jotcacheplugins_recache.ini</language>
      <language tag="en-GB">en-GB/en-GB.plg_jotcacheplugins_recache.sys.ini</language>
    </languages>
    <files folder="admin">
      <folder>assets</folder>
      <folder>controllers</folder>
      <folder>cron</folder>
      <folder>helpers</folder>
      <folder>models</folder>
      <folder>views</folder>
      <folder>sql</folder>
      <filename>access.xml</filename>
      <filename>config.xml</filename>
      <filename>jotcache.php</filename>
      <filename>controller.php</filename>
    </files>
  </administration>
</extension>
