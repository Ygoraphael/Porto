<?xml version="1.0" encoding="utf-8"?>
<extension type="file" method="upgrade" judirplugintype="field">
    <name>Images</name>
    <author>JoomUltra</author>
    <creationDate>18 July 2014</creationDate>
    <authorEmail>admin@joomultra.com</authorEmail>
    <version>1.0</version>
    <license>GNU/GPL</license>
    <website>http://www.joomultra.com</website>
    <description></description>
    <folder>images</folder>
    <default>1</default>
    <fileset>
        <files target="components/com_juform/fields/images">
            <file>images.xml</file>
            <file>images.php</file>
            <file>index.html</file>
            <folder>tmpl</folder>
            <folder>assets</folder>
        </files>
    </fileset>
    <config>
        <fieldset name="config" label="Config">
            <field
                    name="auto_upload"
                    type="radio"
                    default="0"
                    class="btn-group"
                    label="COM_JUFORM_FIELD_AUTO_UPLOAD_LABEL"
                    description="COM_JUFORM_FIELD_AUTO_UPLOAD_DESC">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="max_files"
                    type="text"
                    default="0"
                    class="validate-numeric"
                    label="COM_JUFORM_FIELD_MAX_FILES_LABEL"
                    description="COM_JUFORM_FIELD_MAX_FILES_DESC"
                    />
            <field
                    name="max_size"
                    type="text"
                    size="50"
                    default="2"
                    class="validate-numeric"
                    label="COM_JUFORM_FIELD_MAX_SIZE_LABEL"
                    description="COM_JUFORM_FIELD_MAX_SIZE_DESC"
                    />

            <field
                    name="extensions"
                    type="textarea"
                    cols="20"
                    rows="5"
                    default="jpg,gif,png,bmp"
                    label="COM_JUFORM_FIELD_LEGAL_EXTENSIONS_LABEL"
                    description="COM_JUFORM_FIELD_LEGAL_EXTENSIONS_DESC"
                    />

            <field name="spacer1"
                   type="spacer"
                   hr="true"
                    />

            <field
                    name="check_mimetype"
                    type="radio"
                    default="1"
                    class="btn-group"
                    label="COM_JUFORM_FIELD_CHECK_MIME_LABEL"
                    description="COM_JUFORM_FIELD_CHECK_MIME_DESC">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="width"
                    type="text"
                    default="60"
                    size="25"
                    class="validate-numeric"
                    label="COM_JUFORM_FIELD_IMAGE_WIDTH_LABEL"
                    description="COM_JUFORM_FIELD_IMAGE_WIDTH_DESC"
                    />

            <field
                    name="height"
                    type="text"
                    default="60"
                    size="25"
                    class="validate-numeric"
                    label="COM_JUFORM_FIELD_IMAGE_HEIGHT_LABEL"
                    description="COM_JUFORM_FIELD_IMAGE_HEIGHT_DESC"
                    />

            <field
                    name="imagequality"
                    type="text"
                    default="90"
                    filter="integer"
                    class="validate-numeric"
                    label="COM_JUFORM_FIELD_IMAGE_QUALITY_LABEL"
                    description="COM_JUFORM_FIELD_IMAGE_QUALITY_DESC"
                    />

            <field name="imagefilters"
                   type="list"
                   multiple="true"
                   default=""
                   label="COM_JUFORM_FIELD_IMAGE_FILTERS_LABEL"
                   description="COM_JUFORM_FIELD_IMAGE_FILTERS_DESC">
                <option value="1">COM_JUFORM_OPTION_1_NEGATE</option>
                <option value="2">COM_JUFORM_OPTION_2_GRAYSCALE</option>
                <option value="3">COM_JUFORM_OPTION_3_BRIGHTNESS</option>
                <option value="4">COM_JUFORM_OPTION_4_CONTRAST</option>
                <option value="5">COM_JUFORM_OPTION_5_COLORIZE_TINT</option>
                <option value="6">COM_JUFORM_OPTION_6_EDGE_DETECT</option>
                <option value="7">COM_JUFORM_OPTION_7_EMBOSS</option>
                <option value="8">COM_JUFORM_OPTION_8_GAUSSIAN_BLUR</option>
                <option value="9">COM_JUFORM_OPTION_9_SELECTIVE_BLUR</option>
                <option value="10">COM_JUFORM_OPTION_10_MEAN_REMOVAL</option>
                <option value="11">COM_JUFORM_OPTION_11_SMOOTH</option>
            </field>

            <field
                    name="customfilters"
                    type="text"
                    default=""
                    label="COM_JUFORM_FIELD_CUSTOM_FILTERS_LABEL"
                    description="COM_JUFORM_FIELD_CUSTOM_FILTERS_DESC"
                    />

            <field name="sharpen"
                   type="radio"
                   default="0"
                   class="btn-group"
                   label="COM_JUFORM_FIELD_SHARPEN_LABEL"
                   description="COM_JUFORM_FIELD_SHARPEN_DESC">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field name="canvastransparency"
                   type="radio"
                   default="1"
                   class="btn-group"
                   label="COM_JUFORM_FIELD_CANVAS_TRANSPARENCY_LABEL"
                   description="COM_JUFORM_FIELD_CANVAS_TRANSPARENCY_DESC">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                    name="canvascolour"
                    type="text"
                    class="ju_color"
                    default="FFFFFF"
                    label="COM_JUFORM_FIELD_CANVASCOLOUR_LABEL"
                    description="COM_JUFORM_FIELD_CANVASCOLOUR_DESC"
                    />

            <field name="alignment"
                   type="list"
                   default="c"
                   label="COM_JUFORM_FIELD_ALIGNMENT_LABEL"
                   description="COM_JUFORM_FIELD_ALIGNMENT_DESC">
                <option
                        value="c">COM_JUFORM_CENTER
                </option>
                <option
                        value="t">COM_JUFORM_TOP
                </option>
                <option
                        value="tr">COM_JUFORM_TOP_RIGHT
                </option>
                <option
                        value="tl">COM_JUFORM_TOP_LEFT
                </option>
                <option
                        value="b">COM_JUFORM_BOTTOM
                </option>
                <option
                        value="br">COM_JUFORM_BOTTOM_RIGHT
                </option>
                <option
                        value="bl">COM_JUFORM_BOTTOM_LEFT
                </option>
                <option
                        value="l">COM_JUFORM_LEFT
                </option>
                <option
                        value="r">COM_JUFORM_RIGHT
                </option>
            </field>

            <field name="zoomcrop"
                   type="list"
                   default="1"
                   label="COM_JUFORM_FIELD_ZOOM_CROP_LABEL"
                   description="COM_JUFORM_FIELD_ZOOM_CROP_DESC">
                <option
                        value="0">COM_JUFORM_OPTION_FIT_NO_CROPPING
                </option>
                <option
                        value="1">COM_JUFORM_OPTION_CROP_AND_RESIZE
                </option>
                <option
                        value="2">COM_JUFORM_OPTION_RESIZE_AND_ADD_BODERS
                </option>
                <option
                        value="3">COM_JUFORM_OPTION_RESIZE_NO_BORDERS
                </option>
            </field>
        </fieldset>
    </config>
</extension>