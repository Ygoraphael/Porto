<?xml version="1.0" encoding="utf-8"?>
<extension type="file" method="upgrade" jufmplugintype="field">
    <name>Checkboxes</name>
    <author>JoomUltra</author>
    <creationDate>18 July 2014</creationDate>
    <authorEmail>admin@joomultra.com</authorEmail>
    <version>1.0</version>
    <license>GNU/GPL</license>
    <website>http://www.joomultra.com</website>
    <description></description>
    <folder>checkboxes</folder>
    <default>1</default>
    <fileset>
        <files target="components/com_juform/fields/checkboxes">
            <file>checkboxes.xml</file>
            <file>checkboxes.php</file>
            <file>checkboxes.css</file>
            <file>checkboxes.js</file>
            <file>index.html</file>
            <folder>images</folder>
            <folder>tmpl</folder>
        </files>
    </fileset>
    <config>
        <fieldset name="validate" label="Validate">
            <field
                    name="restrict_type"
                    type="list"
                    default=""
                    class="jufilter"
                    label="COM_JUFORM_FIELD_RESTRICT_TYPE_LABEL"
                    description="COM_JUFORM_FIELD_RESTRICT_TYPE_DESC"
            >
                <option value="">COM_JUFORM_NONE</option>
                <option value="min">COM_JUFORM_MIN</option>
                <option value="max">COM_JUFORM_MAX</option>
                <option value="range">COM_JUFORM_RANGE</option>
            </field>

            <field
                    name="restrict_value"
                    type="text"
                    default=""
                    class="jufilter-restrict_type-min-max-range"
                    label="COM_JUFORM_FIELD_RESTRICT_VALUE_LABEL"
                    description="COM_JUFORM_FIELD_RESTRICT_VALUE_DESC"
            />

            <field
                    name="required_message"
                    type="text"
                    default=""
                    label="COM_JUFORM_FIELD_REQUIRED_MESSAGE_LABEL"
                    description="COM_JUFORM_FIELD_REQUIRED_MESSAGE_DESC"
            />
        </fieldset>

        <fieldset name="config" label="Config">
            <field
                    name="number_columns"
                    type="list"
                    default="0"
                    label="COM_JUFORM_FIELD_NUMBER_COLUMNS_LABEL"
                    description="COM_JUFORM_FIELD_NUMBER_COLUMNS_DESC">
                <option value="0">COM_JUFORM_NO_COLUMN</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
            </field>

            <field
                    name="search_operator"
                    type="list"
                    default="OR"
                    label="COM_JUFORM_FIELD_SEARCH_OPERATOR_LABEL"
                    description="COM_JUFORM_FIELD_SEARCH_OPERATOR_DESC"
                    >
                <option value="OR">COM_JUFORM_MATCH_ANY</option>
                <option value="AND">COM_JUFORM_MATCH_ALL</option>
            </field>
        </fieldset>
    </config>
</extension>