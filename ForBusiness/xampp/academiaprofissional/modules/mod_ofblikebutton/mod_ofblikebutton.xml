		<param type="spacer" default="" />
        <param name="olink" type="text" default="" label="URL to Like" description="Put the link that you want to like ( example: http://www.o-sense.com/), this is the URL to Like, in XFBML and HTML5 the default empty value is for the current page" />		  
		<param name="owidth" type="text" default="400" label="Box Width" description="Put the width of the box that you want in pixels." />
		<param name="ocolor" type="list" default="light" label="Color Scheme" description="Choose the color scheme for the FB Like Button.">
            <option value="light">Light</option>
            <option value="dark">Dark</option>
        </param>  
		<param name="ofaces" type="list" default="true" label="Show Faces" description="Show the faces (profile photos) below the button">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>  

		<param name="oshowSend" type="list" default="true" label="Show Send Button" description="Include a Send button beside the Like button, only available for the HTML5 and XFBML code type">
